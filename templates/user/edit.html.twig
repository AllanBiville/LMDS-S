{% extends 'magasin.html.twig' %}



{% block body %}
	<div class="text-center">
		<h1>Modifier l'utilisateur "{{user.username}}"</h1>
		<a class="btn btn-secondary" href="{{ path('user_index') }}">Retour</a>
		<br/>
		<br/>
		{{ form_start(form) }}
			<p>Nom d'utilisateur</p>
			{{ form_widget(form.username) }}
			<br/><br/>
			<p>Mot de passe</p>
			{{ form_widget(form.password)}}
			<br/><br/>
			<button class="btn btn-success">{{ button_label|default('Modifier') }}</button>
			{{ form_row(form._token) }}
		{{ form_end(form) }}
	</div>




{% endblock %}
