    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomMarque</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.NomMarque }}</td>
                <td>
