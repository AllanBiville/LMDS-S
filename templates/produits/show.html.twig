{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-product">

		<div class="product-show">
			<div class="product-photo">
				<img src="/imagesProduits/{{produit.image }}"/>
			</div>
			<div class="product-detail">
				<h1 class="product__title">{{ produit.titre }}</h1>
				<div class="product__price">
					{% if produit.ancienPrix is not empty %}
						<em>{{ produit.ancienPrix }}&nbsp;€
						</em>
						&nbsp;&nbsp;&nbsp;
					{% endif %}

					{{ produit.prix }}&nbsp;€</div>

				<div class="product__subtitle">{{ produit.description }}</div>

			</div>
		</div>
		<div class="container-product-infos">
			<hr class="hr-produits">
			<h1 class="product-infos-title">Caractéristiques</h1>
			<div class="product-infos">
				<p>
					<i class="fas fa-thermometer-half"></i><br/>
					Etat<br/>Reconditionné</p>
				<p>
					<i class="fas fa-microchip"></i><br/>
					Stockage<br/>
					{{ produit.stockage }}
					Go</p>
				<p>
					<i class="fas fa-mobile-alt"></i><br/>
					Taille écran<br/>
					{{ produit.ecran }}
					pouces</p>
				<p>
					<i class="fas fa-palette"></i><br/>
					Couleur<br/>
					{{ produit.couleur }}</p>
			</div>
		</div>
	</div>
{% endblock %}
